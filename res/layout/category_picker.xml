<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/selectedCatText"></TextView>
    <ListView android:layout_width="match_parent" android:id="@+id/list" android:layout_height="420dp"></ListView>
    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:text="@string/select" android:id="@+id/selectBtn" android:onClick="selectCategory"></Button>
    <TextView android:id="@android:id/empty"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#FF0000"
               android:text="Loading ..."/>
</LinearLayout>
